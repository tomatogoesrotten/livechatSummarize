        "incoming_chat": {
            "url": "{{backend_url}}/webhooks/livechat",
            "secret_key": "{{webhook_secret}}"
        }
    },
    "authorization": {
        "client_id": "{{client_id}}",
        "scopes": [
            "chats--all:ro",
            "chats--access:ro",
            "tickets--all:rw",
            "agents--all:ro"

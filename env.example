# LiveChat Summarization App - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS - comma-separated list of allowed origins (use * for development)
CORS_ORIGINS=["*"]

# =============================================================================
# LIVECHAT API CREDENTIALS
# Get these from: https://developers.livechat.com/console/
# =============================================================================
LIVECHAT_CLIENT_ID=your_client_id_here
LIVECHAT_CLIENT_SECRET=your_client_secret_here
LIVECHAT_ACCOUNT_ID=your_account_id_here

# Optional: Webhook secret for verifying incoming webhooks
LIVECHAT_WEBHOOK_SECRET=your_webhook_secret_here

# API URLs (usually don't need to change these)
LIVECHAT_API_URL=https://api.livechatinc.com/v3.5
LIVECHAT_ACCOUNTS_URL=https://accounts.livechatinc.com

# =============================================================================
# OPENAI SETTINGS
# Get your API key from: https://platform.openai.com/api-keys
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# =============================================================================
# CRM INTEGRATION
# Configure your CRM endpoint for receiving summaries
# =============================================================================

# REST API mode
CRM_ENDPOINT_URL=https://your-crm.com/api/tickets
CRM_API_KEY=your_crm_api_key_here

# Webhook mode (set to true to use webhook instead of REST API)
CRM_USE_WEBHOOK=false
CRM_WEBHOOK_URL=https://your-crm.com/webhooks/livechat

# Custom headers for CRM requests (JSON format)
# CRM_CUSTOM_HEADERS={"X-Custom-Header": "value"}

# =============================================================================
# FEATURE FLAGS
# =============================================================================
AUTO_CREATE_TICKET=true
AUTO_SEND_TO_CRM=true
INCLUDE_RAW_TRANSCRIPT=false

# =============================================================================
# FILTER RULES
# Configure what content to filter from chats before summarization
# =============================================================================
FILTER_REMOVE_SYSTEM_MESSAGES=true
FILTER_REMOVE_AGENT_SIGNATURES=true
FILTER_MIN_MESSAGE_LENGTH=3
FILTER_INCLUDE_GREETINGS=true

